load(
    "//:build_defs.bzl",
    "cc_binary_mozc",
    "cc_library_mozc",
    "select_mozc",
)

cc_library_mozc(
    name = "ios_engine",
    srcs = ["ios_engine.cc"],
    hdrs = ["ios_engine.h"],
    visibility = [
    ],
    deps = [
        "//base",
        "//base:logging",
        "//base:port",
        "//config:config_handler",
        "//data_manager",
        "//engine",
        "//engine:engine_builder",
        "//engine:minimal_engine",
        "//protocol:commands_cc_proto",
        "//protocol:config_cc_proto",
        "//protocol:user_dictionary_storage_cc_proto",
        "//session",
        "//session:session_handler",
        "//session:session_handler_interface",
        "@com_google_absl//absl/base:core_headers",
        "@com_google_absl//absl/flags:flag",
        "@com_google_absl//absl/synchronization",
    ],
)

cc_binary_mozc(
    name = "ios_engine_main",
    srcs = ["ios_engine_main.cc"],
    data = select_mozc(
        default = ["//data_manager/google:mozc.data"],
        oss = ["//data_manager/oss:mozc.data"],
    ),
    deps = [
        ":ios_engine",
        "//base:init_mozc_buildtool",
        "//base:logging",
        "//base:util",
        "//protocol:candidates_cc_proto",
        "@com_google_absl//absl/flags:flag",
    ],
)

cc_library_mozc(
    name = "ios_engine_stub",
    srcs = ["ios_engine_stub.cc"],
    hdrs = ["ios_engine.h"],
    deps = [
        "//base:port",
        "//protocol:commands_cc_proto",
        "//protocol:config_cc_proto",
        "@com_google_absl//absl/base:core_headers",
        "@com_google_absl//absl/synchronization",
    ],
)
