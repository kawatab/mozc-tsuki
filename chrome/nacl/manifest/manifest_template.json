{
  "name": "__MSG_appName__",
  "version": "@MAJOR@.@MINOR@.@BUILD@.@REVISION@",
  "permissions": [
    "input",
    "unlimitedStorage"
  ],
  "manifest_version": 2,
  "minimum_chrome_version": "22",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "background": {
    "page": "nacl_mozc.html"
  },
  "input_components": [{
    "name": "__MSG_appNameUSKeyboard__",
    "type": "ime",
    "id": "nacl_mozc_us",
    "description": "Japanese input method.",
    "language": "ja",
    "layouts": ["us"]
  },{
    "name": "__MSG_appNameJPKeyboard__",
    "type": "ime",
    "id": "nacl_mozc_jp",
    "description": "Japanese input method.",
    "language": "ja",
    "layouts": ["jp"]
  }],
  "options_page": "options.html",
  "icons": {
    "128": "product_icon_32bpp-128.png"
  }
}
