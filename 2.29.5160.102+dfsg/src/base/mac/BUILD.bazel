# Base library platform dependent code for MacOS.

load(
    "//:build_defs.bzl",
    "mozc_cc_binary",
    "mozc_objc_library",
    "mozc_objc_test",
    "mozc_select",
)

package(
    default_visibility = [
        "//:__subpackages__",
    ],
)

mozc_objc_library(
    name = "mac_process",
    srcs = ["mac_process.mm"],
    hdrs = ["mac_process.h"],
    sdk_frameworks = ["Cocoa"],
    deps = [
        ":mac_util",
        "//base:const",
        "//base:logging",
        "//base:util",
        "@com_google_absl//absl/strings",
    ],
)

# These sdk_framework targets are for cross-platform builds.
# Carbon and UIKit are only available in one of the platforms.
# TODO(yuryu): split ios code from mac_util so we don't need these.

mozc_objc_library(
    name = "Carbon",
    sdk_frameworks = ["Carbon"],
    tags = [
        "manual",
    ],
    visibility = ["//visibility:private"],
)

mozc_objc_library(
    name = "UIKit",
    sdk_frameworks = ["UIKit"],
    tags = [
        "manual",
    ],
    visibility = ["//visibility:private"],
)

mozc_objc_library(
    name = "mac_util",
    srcs = [
        "mac_util.mm",
        "scoped_cftyperef.h",
    ],
    hdrs = ["mac_util.h"],
    sdk_frameworks = [
        "CoreFoundation",
        "CoreGraphics",
        "Foundation",
        "IOKit",
    ],
    visibility = ["//:__subpackages__"],
    deps = [
        "//base:const",
        "//base:logging",
        "//base:port",
        "//base:singleton",
        "@com_google_absl//absl/strings",
    ] + mozc_select(
        # Split iOS code into a separate library.
        ios = [":UIKit"],
        macos = [":Carbon"],
    ),
)

mozc_objc_test(
    name = "mac_util_test",
    size = "small",
    srcs = ["mac_util_test.mm"],
    deps = [
        ":mac_util",
        "//testing:gunit_main_objc",
    ],
)

# Only for macOS.
mozc_cc_binary(
    name = "mac_util_main",
    srcs = [
        "mac_util.h",
        "mac_util_main.cc",
    ],
    target_compatible_with = ["@platforms//os:macos"],
    deps = [
        ":mac_util",
        "//base:init_mozc",
        "//base:util",
        "@com_google_absl//absl/flags:flag",
        "@com_google_absl//absl/strings",
    ],
)
